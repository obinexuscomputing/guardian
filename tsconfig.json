{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["es2020"],
      "outDir": "./dist",
      "declarationDir": "dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "baseUrl": "src",
      "paths": {
        "@core/*": ["core/*"],
        "@services/*": ["services/*"],
        "@api/*": ["api/*"],
        "@types/*": ["core/types/*"],
        "@utils/*": ["core/utils/*"],
        "@config/*": ["core/config/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
  }